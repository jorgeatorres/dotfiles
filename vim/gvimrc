" GUI options.
set guioptions=ceig

" Font.
"set guifont=Monaco:h11 linespace=0
"set guifont=Menlo:h11 linespace=1
set guifont=Menlo:h12 linespace=0

" Color scheme.
"colo Tomorrow
colo PaperColor
"set transparency=8

" Copy to system clipboard by default
set clipboard=unnamed

" Disable some default shortcuts for use with other plugins.
macmenu File.Print key=<nop>
macmenu File.New\ Tab key=<nop>
macmenu File.Open\.\.\. key=<nop>
macmenu File.Close key=<nop>
"macmenu Buffers.Delete key=<d-w>
