[color]
	diff = auto
	status = auto
	branch = auto
    ui = true
[core]
    editor = /usr/bin/vim
    excludesfile = ~/.gitignore
[credential]
    helper = osxkeychain
[push]
    default = current
[pull]
    default = current
[diff]
    compactionHeuristic = true
[alias]
	c = commit
	d = diff
	l = log --oneline
    a = add
    p = push
    s = status

	ls = ls-files
	pr = pull --rebase
	uncommit = reset --soft HEAD^
	unstage = reset HEAD
    br = branch
    co = checkout
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = trunk
[include]
	path = .user.gitconfig
	path = .work.gitconfig
